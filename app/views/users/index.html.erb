
<div class="container">
  <div class="row">
    <div class="col-xl-12 text-center">
      <h1 class="title">LOGIN APP</h1>
    </div>
    <div class="col-xl-12 form-group">
      <label for="">Welcome</label>
      <%= link_to current_user.name, user_path(current_user) %>
    </div>
    <h1 class="text-center" style="color: red;">Users list</h1>
<div class="col-md-10 col-lg-offset-1">
  <table class="table text-center" style="border: 2px solid black;">
    <tr class="bg-primary">
      <th class="text-center col-md-1">Index</th>
      <th class="text-center col-md-2">Name</th>
      <th class="text-center col-md-3">Id</th>
      <th class="text-center col-md-3">Show</th>
      <th class="text-center col-md-3">Edit</th>
      <th class="text-center col-md-3">Destroy</th>

    </tr>
      <% @users.each_with_index do |user, index| %>
        <tr class="bg-info">
        <td><%= create_index params[:page], index, 10 %></td>
        <td scope="row"><%= user.name %></td>
        <td scope="row"><%= user.id %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

<div>
<%= form_tag(users_path,:method => 'get') do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

</div>

  </table>
      <%= paginate @users %>
</div>

  </div>
</div>